#!/bin/sh

prompt() {
	_ERR=$?
	_UID=$(id -u)
	_JOB=$(jobs | wc -l)

	#[ $_UID -eq 0 ] && echo -n '[31mâ”€' || echo -n '[30mâ”€'
	#[ $_JOB -ne 0 ] && echo -n '[32mâ”€' || echo -n '[30mâ”€'
	#[ $_ERR -ne 0 ] && echo -n '[33mâ”€' || echo -n '[30mâ”€'

	[ $_UID -eq 0 ] && echo -n '[7;31m ' || echo -n '[7;30m '
	[ $_JOB -ne 0 ] && echo -n '[7;32m ' || echo -n '[7;30m '
	[ $_ERR -ne 0 ] && echo -n '[7;33m ' || echo -n '[7;30m '

	echo -n '[0m'
}

PS1='$(prompt) '
