#!/bin/sh

buf="  %{A:exit:}x%{A}"
for f in 3 4 7 8 10; do buf="$buf %{A:(sleep $(( f * 1 )) && notify-send 'teatime!') & exit:}$f%{A}"; done

while :; do
	echo "$buf";
done | bar -B "#161719" | sh

